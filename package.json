{
  "name": "taskboard",
  "version": "1.0.0",
  "description": "MERN realtime kanban board",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w packages/api\" \"npm run dev -w packages/web\"",
    "build": "npm run build -w packages/api && npm run build -w packages/web",
    "test": "npm run test -w packages/api",
    "test:e2e": "npm run test:e2e -w packages/web",
    "lint": "npm run lint -w packages/api && npm run lint -w packages/web",
    "format": "prettier --write \"packages/**/*.{js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
